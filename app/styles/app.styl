body
  margin 0px
  padding 0px
  background #1d1f21

#EmberYoutube-player
  display none

.application-controls
  box-shadow 0px 0px 4px 1px #151414
  position fixed
  bottom 0px
  width 100%
  height 77px
  background #333
  left 0px
  .progress
    position absolute
    width 100%
    left 0px
    top 0px
    border-radius 0px
    height 5px
    .progress-bar
      background #b73333 !important
.play-button
  position relative
  left 45%
  height 70px
  width 70px
  border-radius 100%
  border 1px #3c3c3c solid
  bottom -6px
  background #121213
  outline none
  color #eee
  font-size 32px
  padding-left 14px
  transition color 0.5s ease
  &:hover
    color #ad2b2b
    box-shadow inset 70px 1px 1px 1px #0e0e0e
.pause-button
  padding-left 7px !important

.container-right
  position fixed
  width 70%
  left 350px
  height 100%
  .application-search
    position relative
    width 100%
    padding 5px 0px
    .input-search
      padding 10px
      list-style none
      background #1d1f21
      border 0px
      border-left 1px #313131 solid
      color #d8d8d8
      width 100%
      outline none
      height 55px
      font-size 20px
      letter-spacing 1px
      font-weight 200

  .application-music-list
    position relative
    width 100%
    background #191a1b
    height 100%
    overflow-y auto
    padding-bottom 135px
    ul
      margin-top 5px
      padding 0px
      .music-list
        padding 10px
        height 100%
        list-style none
        background #353535
        margin 2px
        color #d8d8d8
        cursor pointer
        .music-image
          position relative
          width 70px
          height 70px
          border-radius 100%
          margin-right 10px
          float left
          img
            width 100%
            height 100%
            border-radius 100%
          .play-button
            position absolute
            top 0px
            left 0px
            width 100%
            height 100%
            display none
          &:hover > .play-button
            display block
        .music-title
          position relative
          top 24px
          float left
.container-left
  position fixed
  width 350px
  height 100%
  .application-playlists
    color #d8d8d8
    .playlist-title
      padding 15px 20px
      color #e0e0e0
      font-weight bold
      font-size 18px
      background #333
      display table
      border-bottom-right-radius 20px
      box-shadow 0px 0px 2px 2px #191919
    .content-playlists
      padding 0px
      list-style none
      .playlist
        font-size 16px
        margin-top 2px
        padding 10px 20px
        transition color 0.5s ease
        cursor pointer
        color #ababab
        .fa
          font-size 11px
          margin-right 5px
        &:hover
          color #ad2b2b
      .new-playlist
        text-align center
        cursor pointer
        margin-top 10px
        position absolute
        padding 10px
        width 100%
        bottom 75px
        background #333
        transition color 0.5s ease
        &:hover
          color #ad2b2b
